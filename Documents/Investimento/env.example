# ========================================
# CONFIGURAÇÃO DA BINANCE API
# ========================================

# Suas chaves da API da Binance
# Obtenha em: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=sua_api_key_aqui
BINANCE_SECRET_KEY=sua_secret_key_aqui

# ========================================
# CONFIGURAÇÃO DO FIREBASE (OPCIONAL)
# ========================================

# Configuração do Firebase para logs em nuvem
# Deixe vazio se não usar Firebase
FIREBASE_CONFIG=

# ========================================
# CONFIGURAÇÃO DO SISTEMA
# ========================================

# Modo de execução (testnet ou live)
TRADING_MODE=testnet

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ========================================
# CONFIGURAÇÃO DE TRADING
# ========================================

# Valor mínimo por trade (USDT)
MIN_TRADE_VALUE=15

# Valor máximo por trade (USDT)
MAX_TRADE_VALUE=30

# Take profit em porcentagem
TAKE_PROFIT_PERCENTAGE=2.5

# Stop loss em porcentagem
STOP_LOSS_PERCENTAGE=1.5

# Tempo máximo de hold em minutos
MAX_HOLD_TIME_MINUTES=8

# ========================================
# CONFIGURAÇÃO DE ANÁLISE
# ========================================

# Threshold para pump em 1 minuto (%)
PUMP_THRESHOLD_1MIN=0.5

# Threshold para pump em 5 minutos (%)
PUMP_THRESHOLD_5MIN=0.3

# Threshold para momentum (%)
MOMENTUM_THRESHOLD=0.2

# ========================================
# CONFIGURAÇÃO DE CICLOS
# ========================================

# Intervalo entre ciclos em minutos
CYCLE_INTERVAL_MINUTES=30

# Máximo de trades por ciclo
MAX_TRADES_PER_CYCLE=2

# Máximo de trades ativos simultaneamente
MAX_ACTIVE_TRADES=3
